<body>
	<nav class="navbar navbar-default navbar-fixed-top">
	    <div class="navbar-header">
	        <a class="navbar-brand" href="/">
            <img id = "company-logo" src="images/logo.png">
        </a>
	    </div>
	    <div class="navbar-padding-right">
        <ul class="nav navbar-nav navbar-right navbar-padding">
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/addemployees">Employees</a></li>
            <li class="active">
                <a href="/customizetheme">Settings</a>
            </li>
            <li><a href="/businesssetting">Company Name</a></li>
        </ul>
	    </div>
	</nav>

	<div class="container container-margin-accountSettings">
		{{#message}}
	   <div class="alert alert-danger">{{message}}</div>
		{{/message}}
		<div class="row">
			{{#edited}}
				<div class="alert alert-success" role="alert">
					{{edited}}
				</div>
			{{/edited}}
			{{#alert}}
				<div class="alert alert-warning" role="alert">
					{{alert}}
				</div>
			{{/alert}}
		</div>
		<div class="row">
			<div class="col-md-12" >
				<h2>Change Password</h2>
				<hr style="margin: 5px 0" width=100% align=left>
			</div>
		</div>

		<div class="form-inline">
			<form class="form-horizontal" action="" method="post">
				<label class="col-md-6 control-label editPassword">Old Password</label>
				<div class="col-md-6">
					<input type="password" id="editPassword" name="" value="" class="form-control" required>
				</div>
				<br><br>
				<label class="col-md-6 control-label editPassword">New Password</label>
				<div class="col-md-6">
					<input type="password" id="editPassword" name="" value="" class="form-control" required>
				</div>
				<br><br>
				<label class="col-md-6 control-label editPassword">Confirm New Password</label>
				<div class="col-md-6">
					<input type="password" id="editPassword" name="editPassword" value="" class="form-control" required>
				</div>
				<br><br>
				<div class="col-md-2 col-md-offset-5">
					<button type="email" style = "margin-bottom: 10px" class="btn custom-button">Update</button>
				</div>

			</form>
		</div>
	</div>

