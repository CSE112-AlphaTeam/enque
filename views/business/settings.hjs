		 ################################################ -->

	<div class="container container-margin-accountSettings-continued">
		<div class="row">
			<div class="col-md-12" >
				<h2>Update Contact Information</h2>
				<hr style="margin: 5px 0" width=100% align=left>
			</div>
		</div>
		<div class="form-inline">
			<form class="form-horizontal" action="" method="post">
				<label class="col-md-6 control-label editPassword">Name</label>
				<div class="col-md-6">
					<input type="" id="editPassword" name="editName" value="{{fname}} {{lname}}" class="form-control" required readonly>
				</div>
				<br><br>
				<label class="col-md-6 control-label editPassword">Email Address</label>
				<div class="col-md-6">
					<input type="" id="editPassword" name="editEmail" value="{{email}}" class="form-control" required>
				</div>
				<br><br>
				<label class="col-md-6 control-label editPassword">Phone Number</label>
				<div class="col-md-6">
					<input type="" id="editPassword" name="editPhone" value="{{phone}}" class="form-control" required>
				</div>
				<br><br>
				<div class="col-md-2 col-md-offset-5">
					<button type="email" style = "margin-bottom: 10px" class="btn custom-button">Update</button>
				</div>

			</form>
		</div>
	</div>

