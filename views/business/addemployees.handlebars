<section class="content-header">
    <h1>Dashboard </h1>
    <div id="txt" class="pull-right"></div>
    <h1 class="pull-right" id="currentDate"></h1>
</section>

<section class="content">
    {{#if message}}
        <div class="alert alert-danger">{{message}}</div>
    {{/if}}

    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add Employee</h3>
                </div>
                <div class="box-body">
                    <form method="post" action="addemployees" enctype="application/x-www-form-urlencoded">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" id="inputName" name="inputName" value="{{ name }}" class="form-control" required>
                            <label for="Email">Email</label>
                            <input type="email" id="inputEmail" name="inputEmail" value="{{ email }}" class="form-control" required>
                            <label for="Phone">Phone</label>
                            <input type="phone" id="inputPhone" name="inputPhone" value="{{ phone }}" class="form-control" required>
                        </div>
                        <input class="btn btn-block btn-primary btn-lg btn-flat" name="submit" type="submit" href="/addemployees" value="Add Employee">
                    </form>
                </div>
            </div>
        </div>

        <!-- <div class="col-md-6 center-block">
            <button type="button" class="btn btn-block btn-flat btn-warning">Upload CSV File</button>
        </div> -->

        <div class="col-md-6">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">Employees - registered</h3>
                </div>
                <div class="box-body">
                    <table class="table table-striped" id="registeredEmployees">
                        <tbody>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                            </tr>
                            {{#if signed}}
                            <tr>
                                <td>{{fname}} {{lname}}</td>
                                <td>{{email}}</td>
                                <td>{{phone}}</td>
                            </tr>
                            {{/if}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="box box-danger">
                <div class="box-header with-border">
                    <h3 class="box-title">Employees - not registered</h3>
                </div>
                <div class="box-body">
                    <table class="table table-striped" id="notRegisteredEmployees">
                        <tbody>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                            </tr>
                            {{#if notsigned}}
                            <tr>
                                <td>{{fname}} {{lname}}</td>
                                <td>{{email}}</td>
                                <td>{{phone}}</td>
                            </tr>
                            {{/if}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
