<!--START BOOTSTRAP-->

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<!--END BOOTSTRAP-->

<!--DateTimePicker-->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/smalot-bootstrap-datetimepicker/2.4.4/css/bootstrap-datetimepicker.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/smalot-bootstrap-datetimepicker/2.4.4/js/bootstrap-datetimepicker.js"></script>

<!--Font Awesome-->
<script src="https://use.fontawesome.com/061a6756a8.js"></script>

<!--jQuery Mask Plugin-->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.js"></script>

<section class="content-header">
  <h1>Report Errors </h1>
  <div id="txt" class="pull-right"></div>
  <h1 class="pull-right" id="currentDate"></h1>
</section>

<section class="content">

  <div id="formatDisplay">
      <!-- START Customise the Thankyou Message People See when they submit the form: -->
      <center>
        <div style="display:none;" id="thankyou_message">
        <h2><em>Thanks</em> for letting us know!
        We will get back to you soon if we need more info!</h2>
        </div>
      </center>
      <!-- END Customise the Thankyou Message People See when they submit the form: -->
    <form class="form-horizontal" action="https://script.google.com/macros/s/AKfycbzuB_0JoCNj-09P-l4sQQQbAZNcQj2H1gKcgTXvJHCi2cgQll0/exec" method="post" id="gform">
      <fieldset>
      <div class="col-md-6">

        <div class="box-body">

          <label for="page">What Page is Error Found?:</label>
          <select name="page" id="page" class="form-control" required>
            <option disabled selected value> -- select an option -- </option>
            <option value="Dashboard">Dashboard</option>
            <option value="Sign In Screen">Sign In Screen</option>
            <option value="Employees">Employees</option>
            <option value="Form Editor">Form Editor</option>
            <option value="Schedule Appointment">Schedule Appointment</option>
            <option value="Report Errors">Report Errors</option>
            <option value="Settings">Settings</option>
            <option value="Other">Other</option>
          </select>

          <label for="email">Contact Email:</label>
          <input type="email" id="email" name="email" class="form-control" required />

          <label for="phoneNum">Contact Phone Number:</label>
          <input type="tel" pattern="^\(\d{3}\)\s\d{3}-\d{4}" id="number" name="number" placeholder="(xxx) xxx-xxxx" class="form-control" required />
        </div>
      </div>

      <!--START US Phone# Mask-->
      <script>
        $(document.getElementById('number')).mask('(000) 000-0000');
      </script>
      <!--END US Phone# Mask-->

      <div class="col-md-6">

        <div class="box-body">
          <label for="date">Date & Time Error Occurred:</label>
          <div id="date" class="input-group date form_datetime">
            <input class="form-control" name="dateTime" id="dateTime" type="text" value="" form="gform" readonly required>
            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
          </div>

          <label for="description">Description of Error:</label><br />
          <textarea id="description" name="description" placeholder="Enter text here..." cols="60" rows="5" style="resize: none;" required></textarea>

          <!--START DateTimePicker code-->
          <script type="text/javascript">
          $(".form_datetime").datetimepicker({
            format: "dd MM yyyy - hh:ii",
            autoclose: true,
            pickerPosition: "bottom-left",
            clearBtn: true,
            todayHighlight: true,
            showMeridian: true,
            fontAwesome: true

          });
          </script>
          <!-- END DateTimePicker code-->

        </div>
      </div>
      <div class="col-md-4"></div>
      <div class="col-md-4">
        <button class="btn btn-lg btn-primary btn-block" type='submit'>Submit Report</button>
      </div>
    </fieldset>
    </form>

  </div>

  <!--START AJAX Send Email-->
  <script data-cfasync="false" type="text/javascript"
    src="https://cdn.rawgit.com/dwyl/html-form-send-email-via-google-script-without-server/master/form-submission-handler.js">
  </script>
  <!--END AJAX Send Email-->
</section>
