        <div class="container container-checkin">
            <h1 class ="header">Welcome to {{companyName}}!</h1>
            <img class="checkinphoto" src="{{logo}}" alt="...">

            <div class="form-group">
                <label class="col-md-4 control-label inputFirst">First Name</label>
                <div class="col-md-8">
                    <input type="firstName" id="inputFirst" name="inputFirst" value="{{ inputFirst }}" class="form-control form-width-custom" required autofocus>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label inputLast">Last Name</label>
                <div class="col-md-8">
                    <input type="lastName" id="inputLast" name="inputLast" value="{{ inputLast }}" class="form-control form-width-custom" required autofocus>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label inputDOB">Date of Birth</label>
                <div class="col-md-8">
                    <input type="birthDate" id="inputDOB" name="inputDOB" value="{{ inputDOB }}" class="form-control form-width-custom" placeholder='MM/DD/YY' required autofocus>
                </div>
            </div> 
            <div class="form-group">
                <label class="col-md-4 control-label inputDOB">Phone Number</label>
                <div class="col-md-8">
                    <input type="phone" id="inputPhone" name="inputPhone" value="{{ inputDOB }}" class="form-control form-width-custom" placeholder='(xxx) xxx-xxxx' required autofocus>
                </div>
            </div> 
        </div>
        <a type="button" class="btn custom-button checkinbutton" href="done"
                style="display:block;margin-left:auto;margin-right:auto">Check In
        </a>

    <!-- </body> -->
</html>
